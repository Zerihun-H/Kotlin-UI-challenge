<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTheme" parent="android:Theme.DeviceDefault.Light" />

    <style name="PopupAnimStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="PopupButtonStyle" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_transparent</item>
        <item name="android:minHeight">36.0dip</item>
        <item name="android:maxLines">2</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>